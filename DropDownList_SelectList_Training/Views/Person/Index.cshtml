
@using EntityLayer.Concrete
@model List<Person>

@{
    Layout = "_Layout";
}

<h1>Kişi Listesi</h1>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Ülke</th>
            <th scope="col">Şehir</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SurName</td>
                <td>@item.Country.Name</td>
                <td>@item.City.Name</td>
                <td>
                    <a href="/Person/DeletePerson/@item.Id" onclick="return confirm('Dosyayı silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a>
                    <a href="/Person/UpdatePerson/@item.Id" class="btn btn-success">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Person/AddPerson" class="btn btn-info mt-3">Ekle</a>